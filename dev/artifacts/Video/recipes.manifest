import 'entities/Chat.manifest'
view Chats of [Chat] in 'artifacts/chat.json'

import 'particles/Compose/Compose.manifest'
import 'particles/Identify/Identify.manifest'
import 'particles/RenderTranscript/RenderTranscript.manifest'
import 'particles/ControlVideo/ControlVideo.manifest'
import 'particles/ShowVideo/ShowVideo.manifest'

recipe
  copy Chats as chatsView
  create as meView

  Identify
    user -> meView
  RenderTranscript
    chats <- chatsView
    me <- meView
  Compose
    chats = chatsView
    me <- meView

recipe
  create #ctrl as controls
  ControlVideo
    controls = controls
  ShowVideo
    controls <- controls

recipe
  map #ctrl as controls
  ShowVideo
    controls <- controls
    